#
# This systemd unit starts Dex OpenID Connect provider using Podman.
#
[Unit]
Description=Dex OpenID Connect Provider
After=network-online.target

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
EnvironmentFile=%S/state/environment
EnvironmentFile=%S/state/config.env
WorkingDirectory=%S/state
Restart=always
ExecStartPre=/bin/rm -f %t/dex.pid %t/dex.ctr-id
ExecStartPre=-runagent discover-ldap
ExecStartPre=-runagent configure-matrix
ExecStart=/usr/bin/podman run \
    --detach \
    --conmon-pidfile=%t/dex.pid \
    --cidfile=%t/dex.ctr-id \
    --cgroups=no-conmon \
    --replace --name=dex \
    --network=host \
    --volume=dex-data:/var/lib/dex:Z \
    --volume=%S/state/dex-config:/etc/dex:Z \
    ${DEX_IMAGE} \
    dex serve /etc/dex/config.yaml
ExecStop=/usr/bin/podman stop --ignore --cidfile %t/dex.ctr-id -t 10
ExecStopPost=/usr/bin/podman rm --ignore -f --cidfile %t/dex.ctr-id
PIDFile=%t/dex.pid
Type=forking

[Install]
WantedBy=default.target